MHP_NET_KP=${DATA_ROOT}/models/mhp_net_keypoints.t7
# Leave blank to train on all files.
MHP_SUBSET=${DATA_ROOT}/mhp_files_subset.t7

# location to save checkpoints
CHECKPOINT_DIR=/home/reedscot/checkpoints

